<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickBack"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Settings"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/choice1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1" />

        <RadioButton
            android:id="@+id/choice2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2" />

        <RadioButton
            android:id="@+id/choice3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3" />

        <RadioButton
            android:id="@+id/choice4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4" />

        <RadioButton
            android:id="@+id/choice5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5" />

        <RadioButton
            android:id="@+id/choice6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6" />

        <RadioButton
            android:id="@+id/choice7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7" />

        <RadioButton
            android:id="@+id/choice8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Nombre de voisines pour naître"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Nombre de voisines pour survivre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <RadioButton
            android:id="@+id/choice2.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1" />

        <RadioButton
            android:id="@+id/choice2.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2" />

        <RadioButton
            android:id="@+id/choice2.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3" />

        <RadioButton
            android:id="@+id/choice2.4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4" />

        <RadioButton
            android:id="@+id/choice2.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5" />

        <RadioButton
            android:id="@+id/choice2.6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6" />

        <RadioButton
            android:id="@+id/choice2.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7" />

        <RadioButton
            android:id="@+id/choice2.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Préréglage des règles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RadioButton
            android:id="@+id/choice3.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Maze" />

        <RadioButton
            android:id="@+id/choice3.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Maze" />

        <RadioButton
            android:id="@+id/choice3.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Maze" />

        <RadioButton
            android:id="@+id/choice3.4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Maze" />


    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>